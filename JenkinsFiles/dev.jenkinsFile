pipeline {
   agent any

   environment {
        BRANCH_NAME = 'master'
        input_version = '1.0.0'
   }
   stages {
      stage('Pull code') {
         steps {
            git branch: 'master',credentialsId: 'github.com',url: 'git@github.com:moomdate/SUT-REG-API.git'
         }
      }
      stage('Build container image') {
         sh 'whoami'
      }
      stage('Build') {
         steps {
            sh 'docker build -t reg-api:${input_version} .'
         }
      }
   }
}
